extends layouts/main-layouts.pug                    
block styles
        link(rel="stylesheet",href="/css/forms.css")
        link(rel="stylesheet",href="/css/product.css")

block content
       main 
            if prods.length > 0
                .grid 
                    each product in prods
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            div.card__image
                            
                                img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRZlMZY1F2L96s7TqGJ99-Pbcaa3vRt2NHL7Q&usqp=CAU",alt="A book")
                            div.card__content
                                h2.product__price $19.99
                                p.product__description A very interesting book about so many even more interesting thing!
                            .card__actions
                                button.btn Add to Cart

            else 
                h1 No Products
        
